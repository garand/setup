alias p='cd ~/Projects'
alias gs='git status -sb'
alias git=hub
alias e=subl

function git_branch () {

  branch=$(git symbolic-ref --short HEAD 2>/dev/null)

  if [ $branch ]; then

    if [[ -z $(git status -s) ]]; then
      color='\033[00;32m'
    else
      color='\033[01;31m'
    fi

    echo -e "${color}\c"
    printf '[%s] ' $branch
  fi

}

export PS1='\[\e[1;33m\]\W $(git_branch)\[\e[1;37m\]$ '
