alias gs='git status -sb'
alias git=hub
alias e=subl

function git_branch () {
  if [ -d .git ]; then
    branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD)

    if [[ -z $(git status -s) ]]; then
      color='\033[00;34m'
    else
      color='\033[01;33m'
    fi

    echo -e "${color}\c"
    printf '[%s] ' $branch
  fi
}

export PS1='\[\e[1;32m\]\W $(git_branch)\[\e[1;37m\]$ '
